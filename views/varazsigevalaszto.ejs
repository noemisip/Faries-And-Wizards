<%- include('header') -%>
<div class="col-12">
    <br /><br />
</div>
<div class="row">
    <div class="col-4">
        <br />
    </div>
    <div class="col-5">
        <h1 style="color:#000">Varázsigeválasztó</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        Név
                    </th>
                    <th>
                        &nbsp;
                    </th>
                </tr>
                <% spells.forEach(function(spell){ %>
                    <tr>
                        <td>
                            <%= spell.name %>
                        </td>
                        <td>
                            <a href="/varazsige/<%= fairy._id %>/<%= spell._id %>"
                               class="btn btn-secondary">Hozzáadás</a>
                        </td>
                    </tr>
                <% }); %>
            </table>
        </div>
    </div>

</div>
<%- include('footer') -%>